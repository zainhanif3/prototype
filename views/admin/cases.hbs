<!-- views/cases.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cases Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

<body class="bg-gray-100 p-4">
    <div class="max-w-2xl mx-auto bg-white p-4 shadow">
        <h1 class="text-2xl font-bold mb-4">Cases Admin</h1>
        <ul>
            <% cases.forEach%((item)=> {
                <li class="border-b mb-2 pb-2">
                    <h2 class="text-lg font-semibold">
                        <%= item.title %>
                    </h2>
            
                    <p>
                        <%= item.description %>
                    </p>
                    <div class="mt-2">
                        <a href="/cases/update/<%= item._id %>" class="text-blue-500 mr-2">Edit</a>
                        <form action="/cases/delete/<%= item._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="text-red-500">Delete</button>
                        </form>
                    </div>
                    
                </li>
            }); %>    
        </ul>
        <div class="mt-4">
            <a href="/cases/add" class="inline-block bg-blue-500 text-white py-2 px-4 rounded">Add Case</a>
        </div>
    </div>
</body>

</html>