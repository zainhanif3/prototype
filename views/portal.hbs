<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <title>Your Page Title</title>
  </head>
  <body class="font-sans bg-gray-100">

    <!-- Sidebar -->
    <div class="flex h-screen bg-gray-800 text-white">
      <div class="w-64 bg-gray-700 p-4">
        <h1 class="text-2xl font-semibold mb-4">Dispute Resolution Council</h1>
        <nav>
          <ul>
            <li><a
                href="./portal"
                class="block py-2 px-4 text-white hover:bg-gray-600"
              >Home</a></li>
            <li><a
                href="#"
                class="block py-2 px-4 text-white hover:bg-gray-600"
              >Cases</a></li>
            <li><a
                href="./signin"
                class="block py-2 px-4 text-white hover:bg-gray-600"
              >Logout</a></li>
          </ul>
        </nav>
        <div class="mt-8">
          <form>
            <input
              type="text"
              placeholder="Search..."
              class="w-full px-4 py-2 border rounded"
            />
            <button
              type="submit"
              class="mt-2 bg-blue-500 text-white px-4 py-2 rounded"
            >Search</button>
          </form>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 p-8">
        <h2 class="text-2xl font-semibold mb-4">Submit a Case</h2>

        <!-- Your case submission form goes here -->
        <form>
          <!-- Add your form fields here -->
          <div class="mb-4">
            <label
              for="caseTitle"
              class="block text-sm font-medium text-gray-600"
            >Case Title</label>
            <input
              type="text"
              id="caseTitle"
              name="caseTitle"
              class="mt-1 p-2 w-full border rounded-md"
            />
          </div>

          <!-- Add more form fields as needed -->

          <button
            type="submit"
            class="bg-green-500 text-white px-4 py-2 rounded"
          >Submit Case</button>
        </form>
      </div>
    </div>

  </body>
</html>