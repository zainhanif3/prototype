<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRC Users</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
  </head>
  <body class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="w-full max-w-md">

      <h1 class="text-3xl font-bold mb-4">DRC Users</h1>

      <form action="/add-user" method="POST" class="mb-4">
        <div class="mb-4">
          <label class="block mb-2">Name:</label>
          <input type="text" name="name" class="w-full border p-2" required />
        </div>

        <div class="mb-4">
          <label class="block mb-2">Email:</label>
          <input type="text" name="email" class="w-full border p-2" required />
        </div>

        <div class="mb-4">
          <label class="block mb-2">Password:</label>
          <input
            type="text"
            name="password"
            class="w-full border p-2"
            required
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 px-4 rounded"
        >
          Add User
        </button>
      </form>

      <!-- Search Form -->
      <form action="/search" method="get" class="mb-4">
        <div class="flex mb-4">
          <input
            type="text"
            name="searchTerm"
            required
            class="w-2/3 border p-2 mr-2"
          />
          <select name="searchType" class="w-1/3 border p-2 mr-2">
            <option value="name">Name</option>
            <option value="email">Email</option>
            <option value="cnic">Cnic</option>
            <option value="number">Number</option>
          </select>
          <button
            type="submit"
            class="w-1/3 bg-green-500 text-white px-4 py-2 rounded"
          >
            Search
          </button>
        </div>
      </form>

      <!-- Data fetch, update, and delete -->
      <table class="w-full border">
        <thead>
          <tr class="bg-gray-200">
            <th class="border p-2">Name</th>
            <th class="border p-2">Email</th>
            <th class="border p-2">Password</th>
            <th class="border p-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr class="border">
              <td class="border p-2">{{name}}</td>
              <td class="border p-2">{{email}}</td>
              <td class="border p-2">{{password}}</td>
              <td class="border p-2">
                <a
                  href="/add-user/{{_id}}/update"
                  class="text-blue-500 mx-2 px-2 py-1 rounded"
                >
                  Update
                </a>
                <a
                  href="/add-user/{{_id}}/delete"
                  class="text-red-500 mx-2 px-2 py-1 rounded"
                >
                  Delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>

  </body>
</html>