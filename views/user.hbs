<!-- views/user.ejs -->

<html>
  <head>
    <title>User Data</title>
  </head>
  <body>
    <h1>User Data</h1>
    <form action="/users/:cnic" method="get">
    
    
    <table border="1" >
      <tr>
        <th>Name</th>
        <th>CNIC</th>
        <th>Actions</th>
      </tr>
      <% users.forEach(user => { %>
        <tr>
          <td><%= $users.name %></td>
          <td><%= users.cnic %></td>
          <td>
            <a href="/user/update/<%= user._name %>">Update</a>
            <a href="/user/delete/<%= user._email %>">Delete</a>
          </td>
        </tr>
      <% }); %>
    </table>
    </form>
  </body>
</html>
